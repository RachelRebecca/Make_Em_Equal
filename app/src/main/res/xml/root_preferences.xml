<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="@string/display_header">
        <SwitchPreferenceCompat
            app:defaultValue="true"
            app:key="@string/night_mode_key"
            app:summaryOff="@string/night_mode_off"
            app:summaryOn="@string/night_mode_on"
            app:title="@string/night_mode_title" />
    </PreferenceCategory>

    <PreferenceCategory app:title="@string/game">
        <SwitchPreferenceCompat
            app:defaultValue="false"
            app:key="@string/hint_key"
            app:summaryOff="@string/do_not_show_hint"
            app:summaryOn="@string/show_hint"
            app:title="@string/hint_title" />
    </PreferenceCategory>

</PreferenceScreen>